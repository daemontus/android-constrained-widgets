<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.marvinlabs.widget.aspectratio.ConstrainedRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dip"
            android:background="#abcabc"
            android:gravity="center"
            app:aspectRatioHeight="9"
            app:aspectRatioWidth="16"
            app:fixedDimension="width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/demo_aspectratio_widescreen" />

        </com.marvinlabs.widget.aspectratio.ConstrainedRelativeLayout>

        <com.marvinlabs.widget.aspectratio.ConstrainedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dip"
            android:background="#cbabca"
            android:gravity="center"
            app:aspectRatioHeight="1"
            app:aspectRatioWidth="1"
            app:fixedDimension="width">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/demo_aspectratio_square" />

        </com.marvinlabs.widget.aspectratio.ConstrainedLinearLayout>
    </LinearLayout>
</ScrollView>
